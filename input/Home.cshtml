@model HomeViewModel

<div>
    @if (Model.Title != null)
    {
        <h1>
            @Model.Title
        </h1>
    }
    @if (Model.Content != null)
    {
        <p>
            @Model.Content
        </p>
        <p>
            This site also contains showcase of listing items with detail pages. You can find listing/detail output under the <a href="/features-razor">features-razor</a> or <a href="/features-handlebars">features-handlebars</a> route. This home page has its counterpart on <a href="/index-from-cms">index-from-cms</a> route. Content on this page is fetched from the CMS at the build time.
        </p>
    }
</div>
